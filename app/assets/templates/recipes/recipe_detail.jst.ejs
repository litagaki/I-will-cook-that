
<section class="recipe-info">
  <div class="recipe-intro">
    <em><%= recipe.escape("description")  %></em>
    <p>
      <strong>Servings:</strong>
      <%= recipe.escape("servings") %>
    </p>
    <p>
      <strong>Active Time:</strong>
      <%= recipe.escape("active_time") %>
    </p>
    <p>
      <strong>Total Time:</strong>
      <%= recipe.escape("total_time") %>
    </p>

  </div>
  <div class="recipe-ingredients">
    <h3>Ingredients</h3>
    <ul>
    <% _.each(recipe.escape("ingredients").split("\n"),function(ingredient) { %>
      <li>
        <%= ingredient %>
      </li>
    <% }) %>
    </ul>
  </div>
  <div class="recipe-instructions">
    <h3>Instructions</h3>
    <ul>
    <% _.each(recipe.escape("instructions").split("\n"),function(instruction) { %>
      <li>
        <%= instruction %>
      </li>
    <% }) %>
    </ul>
  </div>
</section>
