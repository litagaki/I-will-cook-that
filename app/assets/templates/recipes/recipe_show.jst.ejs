<div class="recipe-header">
  <h1><%= recipe.escape("title") %></h1>
  <h3>Author: </h3>
  <ul class="ratings">
    <li>
      <h1>/4</h1>
      <h4>Reviews(#)</h4>
    </li>
    <li>
      <h1> %</h1>
      <h4>Make It Again</h4>
    </li>
  </ul>
</div>

<div class="recipe-image">
  <img src="" alt="picture of <%= recipe.escape("title") %>" />
</div>


<div class="action-options">
  <ul>
    <li>Save Recipe</li>
    <li>Print Recipe</li>
  </ul>
</div>

<section class="recipe-main">

  <div class="recipe-nav">
    <ul>
      <li class="cook-tab active" data-section="recipe-detail">Cook</li>
      <li class="review-tab" data-section="recipe-reviews">Reviews(#)</li>
    </ul>
  </div>

  <section class="recipe-pane">
    <section class="recipe-detail active">

    </section>
    <section class="recipe-reviews">
      <ul class="review-list">

      </ul>
    </section>
  </section>


</section>
