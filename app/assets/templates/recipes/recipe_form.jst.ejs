
<a class="go-back" href="#user/saved">&#x25c0 Back to My Saved Recipes</a>

<form class="recipe-form">
  <h2>Add New Recipe </h2>

  <div class="errors">

  </div>


  <label>Recipe Title
    <input type="text" name="recipe[title]" value="<%= recipe.escape("title") %>">
  </label>

  <label>Description
    <textarea
      name="recipe[description]"
      rows="4" ><%= recipe.escape("description") %></textarea>
  </label>

  <label>Photo
    <input id="input-image" class="image" type="file" name="recipe[photo]" value="<%= file %>">
  </label>

  <label>Photo Preview
    <img src="" alt="Preview of uploaded photo" width="200" id="image-preview" />
  </label>

  <label>Number of servings
    <input
      type="number"
      name="recipe[servings]"
      min="1"
      value="<%= recipe.escape("servings") %>">
  </label>

  <label>Active Time
    <input
      type="text"
      name="recipe[active_time]"
      value="<%= recipe.escape("active_time")  %>">
  </label>

  <label>Total Time
    <input
      type="text"
      name="recipe[total_time]"
      value="<%= recipe.escape("total_time")  %>">
  </label>

  <label>Ingredients
    <textarea
      name="recipe[ingredients]"
      rows="8"><%= recipe.escape("ingredients") %></textarea>
  </label>

  <label>Instructions
    <textarea
      name="recipe[instructions]"
      rows="12"><%= recipe.escape("instructions") %></textarea>
  </label>

  <label>Cuisine
    <select class="cuisine" name="tagging[tag_id]">
       <option value=""></option>
      <% if (cuisines) { %>
        <% cuisines.each(function(cuisine){ %>
        <option value="<%= cuisine.id %>"> <%= cuisine.get("label") %></option>
        <% }) %>
      <% } %>
    </select>
  </label>

  <label>Course/Meal
    <select class="course" name="tagging[tag_id]">
       <option value=""></option>
      <% if (courses) { %>
        <% courses.each(function(course){ %>
        <option value="<%= course.id %>"> <%= course.get("label") %></option>
        <% }) %>
      <% } %>
    </select>
  </label>

  <label>Dietary Restriction
    <select class="course" name="tagging[tag_id]">
       <option value=""></option>
      <% if (diets) { %>
        <% diets.each(function(diet){ %>
        <option value="<%= diet.id %>"> <%= diet.get("label") %></option>
        <% }) %>
      <% } %>
    </select>
  </label>

  <label>General
    <select class="general" name="tagging[tag_id]">
       <option value=""></option>
      <% if (generalTags) { %>
        <% generalTags.each(function(general){ %>
        <option value="<%= general.id %>"> <%= general.get("label") %></option>
        <% }) %>
      <% } %>
    </select>
  </label>

  <label>Main Ingredient
    <input type="text" name="tag[label]" value="">
  </label>

  <button class="submit submit-recipe">Submit Recipe</button>

</form>
