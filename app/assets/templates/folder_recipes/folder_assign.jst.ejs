<form class="folder-recipe-form">
  <button type="button" class="cancel">Ã—</button>
  <div class="errors"></div>
  <div class="group">
    <% folders.each(function(folder) { %>
      <label>
        <input
          type="checkbox"
          name="folder_recipe[folder_id]"
          value="<%= folder.id %>"
          <%= savedFolders.get(folder.id) ? "checked" : "" %>>
          <%= folder.escape("title") %>
    </label>
    <%  }) %>
  </div>

  <label>Add to new Folder
    <input id="new-folder" name="folder[name]" placeholder="New Folder Name">
  </label>


  <button type="submit" class="submit folder-recipe-submit">Update Saved Folder(s)</button>

</form>
