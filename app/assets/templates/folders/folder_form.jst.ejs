<form class="folder-form">

  <ul class="error">
    <% _.each(errors, function(error){ %>
      <li><%= error %></li>
    <%  }) %>
  </ul>

  <div class="form-header group ">
    <% if (folder.id) { %>
      <h2>Rename Folder</h2>
    <% } %>
    <button  type="button" class="cancel">Ã—</button>
  </div>


  <label>Folder Name
    <input type="text" name="folder[title]" value="<%= folder.escape("title") %>">
  </label>

  <button type="submit" class="submit submit-folder">Submit</button>
  <% if (folder.id) { %>
    <div class="spacer"></div>
    <button type="button" class="submit delete-folder">Delete Folder</button>
  <% } %>
</form>
